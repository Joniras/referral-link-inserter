{
  "manifest_version": 2,
  "name": "Amazon Affiliate Tag Injector",
  "applications": {
    "gecko": {
      "id": "your-addon-id@domain.com"
    }
  },
  "version": "2.0",
  "description": "Injects your Amazon affiliate tag into the URL.",
  "permissions": [
    "storage",
    "webNavigation",
    "tabs",
    "*://*.amazon.de/*",
    "*://*.amazon.co.uk/*",
    "*://*.amazon.com/*",
    "*://*.amazon.fr/*",
    "*://*.amazon.it/*",
    "*://*.amazon.es/*",
    "*://*.amazon.nl/*",
    "*://*.amazon.ca/*",
    "*://*.amazon.com.au/*",
    "*://*.amazon.com.br/*",
    "*://*.amazon.com.mx/*",
    "*://*.amazon.com.tr/*",
    "*://*.amazon.com.ar/*",
    "*://*.amazon.ae/*",
    "*://*.amazon.sg/*",
    "*://*.amazon.sa/*",
    "*://*.amazon.co.jp/*",
    "*://*.buy.geni.us/*"
  ],
  "icons": {
    "16": "favicons/favicon-16x16.png",
    "32": "favicons/favicon-32x32.png",
    "64": "favicons/favicon-64x64.png",
    "128": "favicons/favicon-128x128.png",
    "256": "favicons/favicon-256x256.png"
  },
  "host_permissions": [
    "*://amazon.de/*",
    "*://amazon.co.uk/*",
    "*://amazon.com/*",
    "*://amazon.fr/*",
    "*://amazon.it/*",
    "*://amazon.es/*",
    "*://amazon.nl/*",
    "*://amazon.ca/*",
    "*://amazon.com.au/*",
    "*://amazon.com.br/*",
    "*://amazon.com.mx/*",
    "*://amazon.com.tr/*",
    "*://amazon.com.ar/*",
    "*://amazon.ae/*",
    "*://amazon.sg/*",
    "*://amazon.sa/*",
    "*://amazon.co.jp/*",
    "*://buy.geni.us/*"
  ],
  "background": {
    "scripts": ["background.js"],
    "type": "module"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  }
}