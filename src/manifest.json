{
  "manifest_version": 2,
  "name": "Affiliate Tag Injector",
  "version": "3.2",
  "description": "Injects your affiliate tag (ebay & Amazon) into the URL.",
  "browser_specific_settings": {
    "gecko": {
      "id": "office@rechnerlotsen.at",
      "update_url": "https://addon.rechnerlotsen.at/updates.json"
    }
  },
  "permissions": [
    "storage",
    "webNavigation",
    "tabs",
    "*://*.amazon.de/*",
    "*://*.amazon.co.uk/*",
    "*://*.amazon.com/*",
    "*://*.amazon.fr/*",
    "*://*.amazon.it/*",
    "*://*.amazon.es/*",
    "*://*.amazon.nl/*",
    "*://*.amazon.ca/*",
    "*://*.amazon.com.au/*",
    "*://*.amazon.com.br/*",
    "*://*.amazon.com.mx/*",
    "*://*.amazon.com.tr/*",
    "*://*.amazon.com.ar/*",
    "*://*.amazon.ae/*",
    "*://*.amazon.sg/*",
    "*://*.amazon.sa/*",
    "*://*.amazon.co.jp/*",
    "*://*.buy.geni.us/*",
    "*://*.ebay.de/*",
    "*://*.ebay.com/*",
    "*://*.ebay.co.uk/*",
    "*://*.ebay.fr/*",
    "*://*.ebay.at/*",
    "*://*.ebay.it/*",
    "*://*.ebay.es/*",
    "*://*.ebay.ca/*",
    "*://*.ebay.com.au/*"
  ],
  "host_permissions": [
    "*://amazon.de/*",
    "*://amazon.co.uk/*",
    "*://amazon.com/*",
    "*://amazon.fr/*",
    "*://amazon.it/*",
    "*://amazon.es/*",
    "*://amazon.nl/*",
    "*://amazon.ca/*",
    "*://amazon.com.au/*",
    "*://amazon.com.br/*",
    "*://amazon.com.mx/*",
    "*://amazon.com.tr/*",
    "*://amazon.com.ar/*",
    "*://amazon.ae/*",
    "*://amazon.sg/*",
    "*://amazon.sa/*",
    "*://amazon.co.jp/*",
    "*://buy.geni.us/*",
    "*://ebay.de/*",
    "*://ebay.com/*",
    "*://ebay.co.uk/*",
    "*://ebay.fr/*",
    "*://ebay.it/*",
    "*://ebay.es/*",
    "*://ebay.ca/*",
    "*://ebay.com.au/*"
  ],
  "icons": {
    "16": "favicons/favicon-16x16.png",
    "32": "favicons/favicon-32x32.png",
    "64": "favicons/favicon-64x64.png",
    "128": "favicons/favicon-128x128.png",
    "256": "favicons/favicon-256x256.png"
  },
  "background": {
    "scripts": ["background.js"],
    "type": "module"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  }
}